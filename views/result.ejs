<%- include("partials/header.ejs") %>
<h1 class="display-2 text-center text-uppercase">
Weather of <%= data.name%> 
</h1>
<div class="container show text-uppercase">
	<ul class="text-success text-center list-group">
	<li class="list-group-item">Description- <strong><%= data["weather"][0]["description"]%></strong></li>
	<li class="list-group-item">mini. temperature- <strong><%= Math.round(data["main"]["temp_min"] -273.15) %>C</strong></li>
	<li class="list-group-item">max. temperature- <strong><%= Math.round(data["main"]["temp_max"] -273.15) %>C</strong></li>
</ul>
	<a class="btn btn-success float-right" href="/">go back</a>
</div>


	
